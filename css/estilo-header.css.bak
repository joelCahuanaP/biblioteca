 .menu{
	 background-color: #F2F3F4;
 }

 .menu ul{
	list-style:none;
 }
 
 
.nav li a{
	background-color: #F2F3F4;
	padding:10px 15px;
	display: block;
}

.nav > li{  
	float:left;
}
 
.nav li a:hover{  
	background-color:orange;
}


.nav li ul{
	display:none;
	position:absolute;
	min-width:140px;/	
}

.nav li:hover>ul{ 
   display:block;
}


