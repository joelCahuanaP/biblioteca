.cont-libro{
	width:1200px;
	margin:40px auto;
	background:red;
	height:600px;
	overflow: scroll;
}

table{
	background-color:#F7DC6F;
	text-align:left;
	width:100%;
	border-collapse:collapse;
}

th,td{
	border: solid 1px black;
	padding:10px;
}

thead{
	background-color:#246355;
	border-bottom: solid 5px #0F362D;
	color:white;
}

tr:hover td{
	background:#F8C471;
}

.opciones{
	width:92.5%;
	margin:auto;
}


input[type=text]{
	width:300px;
	height:26px;
	border-radius:8px;
	border: solid 0.5px black;
	outline: none;
	padding-left:4px;
}

input[type=submit]{
	width:100px;
	height:28px;
	margin-left:10px;
	border-radius:8px;
	border: solid 0.5px black;
	color:white;
	background:#34495E;
}

input[type=submit]:hover{
	background:#212F3C;
}

#bus{
	width:120px;
	border-radius:8px;
}

.controles{
	background:#34495E;
	padding:10px;
	border-radius:8px;
	color:white;	
}

.controles:hover{
	background:#212F3C;	
}