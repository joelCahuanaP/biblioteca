 }
 
 
 .centro{
	width:95%; 
	height:390px;
	background:orange;
	background-color: rgb(51, 51, 51, 0.602);
	margin:auto;
	font-family:Century Gothic;
	
 }
 
 table{
	margin:auto;
	margin-top:26px;
	border-color:silver;
	
}
td{
	width:550px;
	height:170px;
	text-align: center;
	color:white;	
}

td:hover{
	background-color:#5D6D7E;
	/*transform: translateY(+3%); Al pasar el cursor por la celdas estas se van a desplazar 3% con respecto a y*/
}

a>img:hover{
	transform: translateY(+3%);
}
.centro img{
	margin:auto;
}

.centro div{
	width:550px;
	height:24px;
	background:#2C3E50;
	color:white;
}
 
.escuela a{
	color:white;
}
 